<Window x:Class="HackeratiStockChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SciChart="clr-namespace:Abt.Controls.SciChart;assembly=Abt.Controls.SciChart.Wpf"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <SciChart:SciChartSurface x:Name="sciChartSurface"
                                  SciChart:ThemeManager.Theme="Chrome">
            
            <!-- Defines the renderable series, which map 1:1 to data-series. R-Series may be styled -->
            <SciChart:SciChartSurface.RenderableSeries>
                <SciChart:FastLineRenderableSeries SeriesColor="Gray"/>
            </SciChart:SciChartSurface.RenderableSeries>

            <!-- Defines the XAxis -->
            <SciChart:SciChartSurface.XAxis>
                <SciChart:NumericAxis>
                </SciChart:NumericAxis>
            </SciChart:SciChartSurface.XAxis>

            <!-- Defines the YAxis -->
            <SciChart:SciChartSurface.YAxis>
                <SciChart:NumericAxis>
                </SciChart:NumericAxis>
            </SciChart:SciChartSurface.YAxis>

        </SciChart:SciChartSurface>
    </Grid>
</Window>
